" ignore case in search pattern unless it contains at least one uppercase letter
set ignorecase
set smartcase

" allow moving files to trash without confirmation
set confirm-=delete

" change default editor
set vicmd=nvim

set dotfiles

" mappings
noremap J 5j
vnoremap J 5j
noremap K 5k
vnoremap K 5k
nnoremap Q :q<cr>
nnoremap <space>o :!open %c<CR>
nnoremap <space>O :!open .<CR>

" marks
mark h ~/
mark c ~/Code
mark d ~/Desktop
mark l ~/Downloads
mark m ~/Documents
mark x ~/.dotfiles
